{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": ["src/**/*.js", "src/mechanics/game.ts", "src/mechanics/settings/game-settings.ts", "src/mechanics/screens/game-screen.ts", "src/mechanics/system/background.ts", "src/mechanics/entities/entity.ts", "src/mechanics/entities/platform.ts", "src/mechanics/entities/player.ts", "src/mechanics/controllers/input-controller.ts", "src/mechanics/entities/butterfly.ts", "src/mechanics/system/sound.ts", "src/mechanics/utils/index.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
